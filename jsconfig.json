{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    ".next",
    "build",
    "dist"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx"
  ]
}